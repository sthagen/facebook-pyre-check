{
    "name": "pyrefly",
    "description": "A Python language server, powered by pyrefly",
    "extensionKind": [
        "workspace"
    ],
    "author": "Facebook",
    "license": "Apache2",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/facebook/pyre"
    },
    "publisher": "meta",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.94.0"
    },
    "main": "./dist/extension",
    "activationEvents": [
        "onLanguage:python"
    ],
    "contributes": {
        "languages": [
            {
                "id": "python",
                "aliases": [
                    "Python"
                ],
                "extensions": [
                    ".py",
                    ".pyi"
                ]
            }
        ],
        "commands": [
            {
                "title": "Restart Pyrefly Client",
                "category": "pyre2",
                "command": "pyre2.restartClient"
            }
        ],
        "configuration": {
            "properties": {
                "pyre2.lspPath": {
                    "type": "string",
                    "default": "",
                    "description": "The path to the binary used for the lsp"
                },
                "pyre2.lspArguments": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "lsp"
                    ],
                    "description": "Additional arguments that should be passed to the binary at pyre2.lspPath"
                },
                "pyre2.trace.server": {
                    "type": "string",
                    "description": "Set to 'verbose' to enable LSP trace in the console",
                    "default": "off",
                    "enum": [
                        "off",
                        "verbose"
                    ]
                }
            }
        }
    },
    "scripts": {
        "compile": "npm run check-types && node esbuild.js",
        "check-types": "tsc --noEmit",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "vscode:prepublish": "npm run package",
        "package": "npm run check-types && node esbuild.js --production"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.78.1",
        "@vscode/vsce": "^2.9.2",
        "esbuild": "^0.25.1",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    }
}
