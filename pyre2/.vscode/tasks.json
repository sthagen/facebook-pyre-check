{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch extension",
      "dependsOn": [
        "npm: watch:tsc",
        "npm: watch:esbuild"
      ],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "watch:esbuild",
      "group": "build",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "label": "npm: watch:esbuild",
      "presentation": {
        "group": "watch",
        "reveal": "never"
      },
      "options": {
        "cwd": "${workspaceFolder}/lsp"
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "group": "build",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "label": "npm: compile",
      "presentation": {
        "reveal": "never"
      },
      "options": {
        "cwd": "${workspaceFolder}/lsp"
      }
    },
    {
      "type": "npm",
      "script": "watch:tsc",
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "label": "npm: watch:tsc",
      "presentation": {
        "group": "watch",
        "reveal": "never"
      },
      "options": {
        "cwd": "${workspaceFolder}/lsp"
      }
    }
  ]
}
