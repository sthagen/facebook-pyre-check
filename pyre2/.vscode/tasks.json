{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch extension",
      "dependsOn": [
        "npm: watch:tsc",
        "npm: watch:esbuild"
      ],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build extension",
      "dependsOn": [
        "npm: compile",
        "cargo: build pyrefly for extension"
      ],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
     {
      "type": "npm",
      "script": "watch:esbuild",
      "group": "build",
      "isBackground": true,
      "label": "npm: watch:esbuild",
      "presentation": {
        "group": "watch",
        "reveal": "never"
      },
      "options": {
        "cwd": "${workspaceFolder}/lsp"
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "group": "build",
      "isBackground": true,
      "label": "npm: compile",
      "presentation": {
        "reveal": "never"
      },
      "options": {
        "cwd": "${workspaceFolder}/lsp"
      }
    },
    {
      "type": "shell",
      "command": "cargo build --release --all-features --target-dir lsp/bin --manifest-path pyre2/Cargo.toml",
      "group": "build",
      "isBackground": true,
      "label": "cargo: build pyrefly for extension",
      "options": {
        "shell": {
          // -l (login shell) necessary on some machines to find cargo
          // https://code.visualstudio.com/docs/editor/tasks#_why-do-i-get-command-not-found-when-running-a-task
          "args": ["-c", "-l"]
        }
      }
    },
    {
      "type": "npm",
      "script": "watch:tsc",
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "label": "npm: watch:tsc",
      "presentation": {
        "group": "watch",
        "reveal": "never"
      },
      "options": {
        "cwd": "${workspaceFolder}/lsp"
      }
    }
  ]
}
